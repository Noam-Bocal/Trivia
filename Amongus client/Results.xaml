<Window x:Class="client2.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client2"
        mc:Ignorable="d"
        Title="Results" Height="400" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="Screens/BestScore-Screen.png" Stretch="Fill" />
    </Window.Background>

    <Canvas x:Name="canvas">
        <Canvas.Resources>
            <VisualBrush x:Key="QuestionMarkBrush"
                         AlignmentX="Left" AlignmentY="Top"
                         TileMode="Tile">
                <VisualBrush.Visual>
                    <TextBlock Text="?"
                               FontSize="100"
                               Foreground="#FFFFFF" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Canvas.Resources>

        <Label x:Name="usernameLabel" Foreground="White" FontSize="20" FontFamily="MV Boli"
               Canvas.Left="10" Canvas.Top="10" />
        


        <Button Content="OK" Canvas.Left="683" Canvas.Top="294" Height="44" Width="45" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Foreground="Black" Background="Pink" Click="OK_Click" FontFamily="MV Boli"/>
    </Canvas>
</Window>
